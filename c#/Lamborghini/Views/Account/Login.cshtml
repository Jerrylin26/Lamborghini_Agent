    <!-- Global Init -->
    <script src="~/js/custom.js"></script>

    <script>

        $(function() {
            var selectedClass = "";
            $("p").click(function(){
            selectedClass = $(this).attr("data-rel");
            $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              $("."+selectedClass).fadeIn();
              $("#portfolio").fadeTo(50, 1);
            }, 500);

            });
        });

    </script>


    <!-- 登入 ajax -->
    <script>
        $(document).ready(function(){
            $("#loginForm").on("submit", function(e){
                e.preventDefault(); // 阻止頁面跳轉

                var Account = $("#Account").val();
                var Password = $("#Password").val();
                // console.log("Account: ",Account);
                // console.log("Password: ",Password);


                $.ajax({
                    url: "/Account/Login_post",
                    type: "POST",
                    dataType: 'json',
                    data: { Account: Account, Password: Password },
                    success: function(res){
                        if(! res.success){
                            $("#errorMessage").text(res.message);

                        }else{
                            window.location.href = res.redirectUrl;
                        }
                    },
                    error: function(xhr){
                        console.log(xhr.responseText);
                        $("#errorMessage").text("伺服器錯誤");
                    }
                });
            });
        });



    </script>


    <!-- 註冊成功提示 -->
    @if (TempData["Message"] != null)
    {
        <script>
            alert(@Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["Message"])));
        </script>
    }

   

    <!-- cart 購物數量即時更新 ajax 當每次進入不同頁面時-->
    <script>
        $(document).ready(function () {

            $.ajax({
                type: "POST",
                url: "/Cart/GetCartCount",
                data: {},
                dataType: 'json',
                withCredentials: true,
                success: function (result) {

                    if (result.success) {

                        $("#cartQuantity").text(result.totalQuantity); 更新購物車數量
                    }

                },
                error: function (xhr, status, error) {
                    alert("發生錯誤：" + error);
                }
            });

        });
    </script>

    <script>
        $(document).ready(function() {
            // 每次確認是否登入 從cookie找資料
            $.ajax({
                type: "GET",
                url: "/Account/LoginCheck",
                dataType: 'json',
                success: function(result) {
                    $("#user_Name").text(result.loginName);

                }
            });
        });

    </script>

