    <script>

        $(function() {
            var selectedClass = "";
            $("p").click(function(){
            selectedClass = $(this).attr("data-rel");
            $("#portfolio").fadeTo(50, 0.1);
                $("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              $("."+selectedClass).fadeIn();
              $("#portfolio").fadeTo(50, 1);
            }, 500);

            });
        });

    </script>

    <!-- cart 購物數量即時更新 ajax 當每次進入不同頁面時-->
    <script>
        $(document).ready(function () {

            $.ajax({
                type: "POST",
                url: "/Cart/GetCartCount",
                data: {},
                dataType: 'json',
                withCredentials: true,
                success: function (result) {

                    if (result.success) {

                        $("#cartQuantity").text(result.totalQuantity); 更新購物車數量
                    }

                },
                error: function (xhr, status, error) {
                    alert("發生錯誤：" + error);
                }
            });

        });
    </script>


    <!-- AddToCart_button  ajax  1. 確認加入cookie  2. 購物車數量即時更新-->
    <script>
        $(document).ready(function () {
           $(document).on("click", ".ajax-add-to-cart", function () {
                var CarSeries = $(this).data("series");
                var CarModel = $(this).data("model");
                var PID = $(this).data("pid");
                var amount = $(".qty").val(); // 取得數量

                console.log(CarSeries, CarModel, PID, amount);

                $.ajax({
                    type: "POST",
                    url: "/Cart/AddToCookie",
                    data: { Series: CarSeries, Model:CarModel, PID:PID, amount:amount },
                    dataType: 'json',
                    withCredentials: true,
                    success: function (result) {

                        if (result.success) {
                            $("#cartQuantity").text(result.totalQuantity); 更新購物車數量
                        }

                    },
                    error: function (xhr, status, error) {
                        alert("發生錯誤：" + error);
                    }
                });
            });
        });
    </script>


    <!--  Details.cshtml 選取數量,即時更新總價 -->
    <script>
        $(document).ready(function () {
            const unitPrice = parseInt($(".unit_price").text().replace(/[^0-9]/g, "")); // 單價

            function updateTotal() {
                const qty = parseInt($(".qty").val().replace(/[^0-9]/g, "")) || 1;
                console.log(qty);
                const total = unitPrice * qty;
                $("#totalPrice").text("Total: "+ total.toLocaleString());
            }

            // 點擊 + 按鈕
            $(".plus").click(function () {
                setTimeout(updateTotal, 0) // 放入任務隊列
                updateTotal();
                
            });

            // 點擊 - 按鈕
            $(".minus").click(function () {
                setTimeout(updateTotal, 0) // 放入任務隊列
                updateTotal();

                
            });

            // 直接修改數字也觸發
            $(".qty").on("input", function () {
                updateTotal();
            });
        });

    </script>

    <script>
        $(document).ready(function() {
