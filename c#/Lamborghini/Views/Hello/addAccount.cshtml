<h2>新增 帳號</h2>
<br />

<form method="post" action="/Home/addAccount">
    <div class="form-group row">
        <label for="inputUserName" class="col-sm-2">帳號名稱</label>
        <div class="col-sm-10">
            <input type="text" id="inputUserName" name="username" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPasswd" class="col-sm-2">帳號密碼</label>
        <div class="col-sm-10">
            <input type="text" id="inputPasswd" name="password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAge" class="col-sm-2">帳號年齡</label>
        <div class="col-sm-10">
            <input type="text" id="inputAge" name="age" class="form-control" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="新增" />
</form>